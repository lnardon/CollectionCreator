{
  "manifest_version": 2,
  "name": "CollectionCreator",
  "description": "Easily copy a image url to your clipboard.",
  "author": "github.com/lnardon",
  "version": "1.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["tabs"],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "./logo.png",
    "default_title": "Collection Creator"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
